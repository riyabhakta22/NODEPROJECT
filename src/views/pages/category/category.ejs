<%- include('../../partials/sidebar') %>
<%- include('../../partials/Header') %>


<main id="main" class="main">
<div class="card">
    <div class="card-body">
      <h5 class="card-title">Category Table</h5>

      <!-- Default Table -->
      <table class="table">
        <thead>
          <tr>
            <th scope="col"> Sr.</th>
            <th scope="col">Category</th>
             <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
            <% categories && categories.map((category, index)=>{ %>
            <tr>
              <th scope="row">1</th>
              <td><%= index + 1 %></td>

            </tr>
            <tr>
              <th scope="row">2</th>
              <td><%= category.name %></td>
           
            </tr>
            <tr>
              <th scope="row">3</th>
              <td>
                <a class="btn btn-primary" href="/category/edit/<%= category._id%>">
                  
                  </a>

                  <a class="btn btn-primary" href="/category/delete/<%= category._id%>">
                   
                  </a>
              </td>
           
            </tr>
            <% }) %>
          </tbody>
      </table>
      <!-- End Default Table Example -->
    </div>
  </div>
  </main>